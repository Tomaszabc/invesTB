<%= link_to article_path(article), id: dom_id(article), class: "block transition duration-300 hover:opacity-90" do %>
  <div class="max-w-xl mx-auto overflow-hidden ">
    <div class="flex flex-col justify-between"> 
      <div>
        <p class="my-2">
          <%= image_tag 'https://media1.money.ca/a/29198/borrow-to-invest_facebook_thumb_1200x628_v20230704130851.jpg', alt: 'Opis obrazka', class: "rounded w-full" %>
        </p>

        <p class="my-3 text-lg text-slate-300">
          <strong><%= article.title %></strong>
        </p>

        <p class="">
          <%= truncate(article.content, length: 100) %> 
        </p>
      </div>

      <p class="text-sm text-slate-400 self-end">
        <strong><%= article.created_at.strftime('%d-%m-%Y') %></strong>
      </p>
    </div>
  </div>
<% end %>
