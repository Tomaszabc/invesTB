<%= link_to article_path(article),
            id: dom_id(article),
            class: "block transition duration-300 hover:opacity-90 relative hover:scale-105 h-full" do %>
  <div class="max-w-full mx-auto sm:max-h-96 h-full min-h-64">
    <div class="flex flex-col h-full justify-between mx-auto sm:max-w-none">
      <div>
        <div class="my-2 h-56 overflow-hidden">
          <% if article.article_image.attached? %>
            <%= image_tag article.resized_article_image, alt: 'Artykuł', class: "rounded w-full h-full object-cover transition-transform duration-300 ease-in-out hover:scale-105" %>
          <% else %>
            <%= image_tag 'article_image.jpg', alt: 'Artykuł', class: "rounded w-full h-full object-cover transition-transform duration-300 ease-in-out hover:scale-105" %>
          <% end %>
        </div>
        <div class="my-3 text-lg text-slate-300 flex">
          <%= render 'thumbnail_number', article: article, articles: @articles %>
          <strong class="ml-2"><%= article.title %></strong>
        </div>
        <p class="h-full">
          <%= render_article_content(article) %>
        </p>
      </div>
      <p class="text-sm text-slate-400 mt-auto text-right">
        <strong><%= article.created_at.strftime('%d-%m-%Y') %></strong>
      </p>
    </div>
  </div>
<% end %>
