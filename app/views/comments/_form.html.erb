<%= form_with(model: [article, Comment.new], local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.object.errors.count, "error") %> Nie zapisano ponieważ:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless user_signed_in? %>
    <div class="field">
      <%= form.label :username, "Nazwa użytkownika:" %>
      <%= form.text_field :username, class:' rounded bg-transparent', autocomplete: "off" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Napisz komentarz:" %>
    <%= form.rich_text_area :content %>
  </div>
  <div class="actions justify-end flex mr-10">
    <%= button_tag(type: 'submit', class: 'svg-button-comment') do %>
    <% end %>
  </div>
<% end %>