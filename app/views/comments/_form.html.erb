<%= form_with(model: [article, Comment.new], local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.object.errors.count, "error") %> Nie zapisano poniewa≈º:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script src="//cdn.ckeditor.com/4.22.1/standard-all/ckeditor.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    CKEDITOR.replace('comment_content');
  });
</script>