<%= form_with(model: [article, Comment.new], local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.object.errors.count, "error") %> Nie zapisano poniewa≈º:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label "Dodaj komentarz:" %>
    <%= form.rich_text_area :content %>
  </div>
  <div class="actions justify-end flex mr-10">
    <%= button_tag(type: 'submit', class: 'svg-button-comment') do %>
    <% end %>
  </div>
<% end %>