<nav class="navbar-sticky bg-[#181A20]">
  <div class="container mx-auto flex justify-between items-center px-6 py-4 max-w-5xl">
    <%= link_to 'InvesTB', root_path, class: "text-[#EAECEF] hover:text-white transition-colors text-xl" %> 
    <div class="hidden md:flex">
      <%= link_to 'Logowanie', root_path, class: "text-[#EAECEF] hover:text-white transition-colors mr-2" %>
      <%= link_to 'Zarejestruj siÄ™', root_path, class: "bg-yellow-400 text-black font-bold py-2 px-4 rounded transition duration-300 ease-in-out hover:bg-yellow-500" %>
    </div>
    <div class="list-container md:hidden">
      <%= render "shared/menu_button" %>
    </div>
  </div>
</nav>

<script>
document.addEventListener('click', function(event) {
  const menuButton = document.querySelector('.more-button');
  const listContainer = document.querySelector('.list-container');
  const isClickInsideMenuButton = menuButton.contains(event.target);
  const isClickInsideListContainer = listContainer.contains(event.target);

  if (!isClickInsideMenuButton && !isClickInsideListContainer && listContainer.classList.contains('active')) {
    listContainer.classList.remove('active');
  }
});

document.querySelector('.more-button').addEventListener('click', function(event) {
  document.querySelector('.list-container').classList.toggle('active');
  event.stopPropagation(); 
});
</script>
