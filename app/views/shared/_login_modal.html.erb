<div id="loginModal" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-50 hidden transition-opacity duration-300" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="bg-zinc-600 rounded-lg overflow-hidden shadow-xl max-w-xs max-h-80vh md:max-w-md md:h-auto" style="width: 300px; height: 400px;">
    <div class="flex min-h-full flex-col justify-center px-6 py-2">
      <div class="flex justify-between items-center">
        <%= link_to '#', class: "close-modal-trigger animate-bounce" do %>
          <%= render "shared/logos_svg/x_button" %>
        <% end %>
        <h2 class="text-2xl font-bold leading-9 tracking-tight text-gray-900">Zaloguj siÄ™</h2>
      </div>
      
      <div class="mt-2 mx-auto w-full max-w-sm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo_frame: "login_modal" }) do |f| %>
          <div>
            <%= f.label :email, class: "block font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-600 focus:border-indigo-600" %>
            </div>
          </div>

          <div class="mt-2">
            <div class="flex items-center justify-between">
              <%= f.label :password, class: "block font-medium leading-6 text-gray-900" %>
              <div class="text-sm">
                <%= link_to 'Forgot your password?', new_password_path(resource_name), class: "font-semibold text-gray-400 hover:text-gray-500" %>
              </div>
            </div>
            <div class="mt-2">
              <%= f.password_field :password, autocomplete: "current-password", required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-600 focus:border-indigo-600" %>
            </div>
          </div>

          <div class="mt-2">
            <%= f.submit "Log in", class: "flex w-full justify-center rounded-md bg-yellow-500 px-3 py-1.5 text-sm font-semibold leading-6 text-black shadow-sm hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600" %>
          </div>
        <% end %>

        <p class="mt-2 text-center text-sm text-stone-800">
          Don't have an account? 
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-gray-400 hover:text-gray-500" %>
        </p>
      </div>
    </div>
  </div>
</div>
